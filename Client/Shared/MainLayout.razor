@using Radzen;
@using Data.Wallet;
@inherits LayoutComponentBase

<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" Wrap="FlexWrap.NoWrap">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="banco" />

            <RadzenRow JustifyContent="JustifyContent.End" AlignItems="AlignItems.Normal" Gap="1" Style="width:100%">
                <RadzenRow Gap="1rem">

                    <RadzenColumn Order="7">
                        @if(WalletSingleton.Instance == null)
                        {
                            <RadzenButton Text="Conectar" Icon="account_balance_wallet" Click=@OpenWalletConnectors></RadzenButton>
                        }
                        else
                        {
                            <RadzenButton Text="@WalletSingleton.Instance.Name" Icon="account_balance_wallet"></RadzenButton>
                        }
                    </RadzenColumn>
                </RadzenRow>
            </RadzenRow>

        </RadzenStack>

    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded">
        <NavMenu />

    </RadzenSidebar>
    <RadzenBody>
        @Body
    </RadzenBody>
    <RadzenFooter>
        <Copyright />
    </RadzenFooter>
</RadzenLayout>



@using Radzen;
@using Data.Wallet;
@inherits LayoutComponentBase

<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" Wrap="FlexWrap.NoWrap">
            <RadzenSidebarToggle Click="@(() => ToggleSideBar())" />
            <RadzenLabel Text="banco" />

            <RadzenRow JustifyContent="JustifyContent.End" AlignItems="AlignItems.Normal" Gap="1" Style="width:100%">
                <RadzenRow Gap="2rem">
                    <RadzenColumn Order="7">                       
                      <WalletConnect />
                    </RadzenColumn>
                </RadzenRow>
            </RadzenRow>

        </RadzenStack>

    </RadzenHeader>
    <RadzenSidebar @bind-Expanded=@sidebarExpanded @bind-Visible=@SidebarVisible>
        <NavMenu />

    </RadzenSidebar>
    <RadzenBody>
            @Body       
    </RadzenBody>
    <RadzenFooter>
        <Copyright />
    </RadzenFooter>
</RadzenLayout>



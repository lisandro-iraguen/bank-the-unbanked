@using Radzen;
@using Data.Wallet;
@inherits Fluxor.Blazor.Web.Components.FluxorLayout;


<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" Wrap="FlexWrap.NoWrap">
            <RadzenSidebarToggle Click="@(() => ToggleSideBar())" />
            <RadzenLabel Text="banco" />

            <RadzenRow JustifyContent="JustifyContent.End" AlignItems="AlignItems.Normal" Gap="1" Style="width:100%">
                <RadzenRow Gap="2rem">                    
                    <RadzenColumn Order="7">
                        @if (walletConectorState.Value.IsConnecting)
                        {
                            <RadzenProgressBarCircular Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
                        }
                        else
                        {
                            if (walletState.Value.Wallet == null)
                            {
                                <RadzenButton class="rz-m-2" Text="Conectar" Icon="account_balance_wallet" Click=@OpenWalletConnectors></RadzenButton>
                            }
                            else
                            {
                                <RadzenButton class="rz-m-2" Text="@walletState.Value.Wallet.Name" Icon="account_balance_wallet" Click=@OpenWalletDisconector></RadzenButton>
                            }
                        }
                    </RadzenColumn>
                </RadzenRow>
            </RadzenRow>

        </RadzenStack>

    </RadzenHeader>
    <RadzenSidebar @bind-Expanded=@sidebarExpanded @bind-Visible=@SidebarVisible>
        <NavMenu />
    </RadzenSidebar>
    <RadzenBody>
             @Body        
    </RadzenBody>
    <RadzenFooter>
        <Copyright />
    </RadzenFooter>
</RadzenLayout>


